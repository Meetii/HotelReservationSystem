@model HotelSystem.Domain.DTO.HotelCartDto

<div class="container">

    <div class="row m-5">
        <a asp-action="OrderNow" class="btn btn-success">Order Now</a>
    </div>

    <div class="row m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Hotel Name</th>
                    <th scope="col">Hotel Price</th>
                    <th scope="col">Stars</th>
                    <th scope="col">Check In Date</th>
                    <th scope="col">Check Out Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.HotelInReservationCarts.Count; i++)
                {
                    var item = Model.HotelInReservationCarts[i];
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.Hotel.HotelName</td>
                        <td>@item.Hotel.Price $</td>
                        <td>@item.Hotel.Stars *</td>
                        <td>@item.checkIn.ToString("d")</td>
                        <td>@item.checkout.ToString("d")</td>
                        <td><a asp-controller="ReservationCart" asp-route-hotelid="@item.Hotel.Id" asp-action="DeleteHotelFromReservationCart" class="btn btn-danger">Delete Reservation</a></td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th scope="col">Total Price: </th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice $</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>



