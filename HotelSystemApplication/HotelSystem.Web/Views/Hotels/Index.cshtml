@model List<HotelSystem.Domain.DomainModels.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Hotels" asp-action="Create">Add new Hotel</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
                if (i % 3 == 0)
                {
                    @:<div class="row"> 
                }

               <div class="col-md-3 m-4">
                   <div class="card" style="width: 18rem; height:28rem">
                       <img src="@item.HotelImage" style="height: 48% "class="card-img-top" alt="Image for Hotel">
                       <div class="card-body">
                           <h5 class="card-title">@item.HotelName</h5>
                           <p class="card-text">@item.HotelDescription</p>
                           <p class="card-text">Price per night: @item.Price $</p>
                       </div>
                       <div class="card-footer">
                           <a asp-controller="Hotels" asp-action="AddHotelToCard" asp-route-id="@item.Id" class="btn btn-info">Reserve</a>
                           <a asp-controller="Hotels" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                       </div>
                   </div>
               </div>
                if (i % 3 == 2)
                {
                    @:</div>
                }
    }
</div>


